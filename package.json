  "license": "GPL-3.0-only",
  "description": "Klondike Solitaire game logic library.",
  "keywords": [
    "klondike",
    "solitaire",
    "patience",
    "game",
    "windows"
  ],
  "homepage": "https://github.com/oddoid/chillygem",
  "repository": "github:oddoid/chillygem",
  "bugs": "https://github.com/oddoid/chillygem/issues",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "rm -rf dist && tsc -w",
    "build": "rm -rf dist && tsc",
    "test:unit": "jest",
    "test": "npm -s run formatter -- -l && npm -s run test:unit",
    "format": "npm -s run formatter -- -w",
    "formatter": "prettier --loglevel warn './**/*.{json,md,ts}'",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "version": "npm run build && npm t",
    "postversion": "npm publish",
    "prepublishOnly": "git push --follow-tags"
  },
  "devDependencies": {
    "jest": "26.6.3",
    "pre-commit": "1.2.2",
    "prettier": "2.1.2",
    "ts-jest": "26.4.3",
    "typescript": "4.1.1-rc"
  }
